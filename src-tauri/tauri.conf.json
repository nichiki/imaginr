{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Image Prompt Builder",
  "version": "0.1.0",
  "identifier": "com.image-prompt-builder.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "out"
  },
  "app": {
    "windows": [
      {
        "title": "Image Prompt Builder",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
